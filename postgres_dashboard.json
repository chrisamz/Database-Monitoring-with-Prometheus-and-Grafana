{
  "id": null,
  "title": "PostgreSQL Monitoring Dashboard",
  "tags": ["postgresql", "database"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "graph",
      "title": "Active Connections",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "pg_stat_activity_count",
          "legendFormat": "Active Connections",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Connections",
          "show": true
        },
        {
          "show": false
        }
      ]
    },
    {
      "type": "graph",
      "title": "Transactions per Second",
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(pg_stat_database_xact_commit[5m])",
          "legendFormat": "Commits",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_database_xact_rollback[5m])",
          "legendFormat": "Rollbacks",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Transactions/s",
          "show": true
        },
        {
          "show": false
        }
      ]
    },
    {
      "type": "graph",
      "title": "Cache Hit Ratio",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "((pg_stat_database_blks_hit::float / (pg_stat_database_blks_read + pg_stat_database_blks_hit)) * 100)",
          "legendFormat": "Cache Hit Ratio",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "Hit Ratio",
          "show": true
        },
        {
          "show": false
        }
      ]
    },
    {
      "type": "graph",
      "title": "Disk I/O Operations",
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "rate(pg_stat_database_blks_read[5m])",
          "legendFormat": "Disk Reads",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_database_blks_hit[5m])",
          "legendFormat": "Buffer Hits",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Operations/s",
          "show": true
        },
        {
          "show": false
        }
      ]
    },
    {
      "type": "graph",
      "title": "Replication Lag",
      "gridPos": {"x": 0, "y": 16, "w": 24, "h": 8},
      "targets": [
        {
          "expr": "pg_stat_replication_lag",
          "legendFormat": "Replication Lag",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Seconds",
          "show": true
        },
        {
          "show": false
        }
      ]
    }
  ],
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  }
}
